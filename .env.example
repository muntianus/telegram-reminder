# Telegram bot token
TELEGRAM_TOKEN=
# Optional chat ID for direct messages
CHAT_ID=
# OpenAI API key
OPENAI_API_KEY=
# Model name (default gpt-4.1)
OPENAI_MODEL=gpt-4.1
# Max tokens per response
OPENAI_MAX_TOKENS=600
# Tool calling mode
OPENAI_TOOL_CHOICE=auto
# Time for lunch ideas
LUNCH_TIME=13:00
# Time for evening digest
BRIEF_TIME=20:00
# Path to tasks configuration
TASKS_FILE=tasks.yml
# Path to whitelist file
WHITELIST_FILE=whitelist.json
# Blockchain API URL
BLOCKCHAIN_API=https://api.blockchain.info/stats
# Enable web search (true/false)
ENABLE_WEB_SEARCH=true
# Log level: debug, info, warn, error
LOG_LEVEL=error
# Docker Hub username for pulling image
DOCKERHUB_USER=
