# === ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ ===
TELEGRAM_TOKEN=your_telegram_token
OPENAI_API_KEY=your_openai_key

# === ОСНОВНЫЕ НАСТРОЙКИ ===
# Chat ID для отправки сообщений (получите через /start)
CHAT_ID=

# Модель OpenAI (рекомендуется gpt-4.1 для лучшего качества)
OPENAI_MODEL=gpt-4.1

# Максимальное количество токенов ответа (100-4000)
OPENAI_MAX_TOKENS=600

# === НАСТРОЙКИ БЕЗОПАСНОСТИ ===
# ID чата для отправки логов ошибок (рекомендуется отдельный приватный чат)
LOG_CHAT_ID=

# Уровень логирования (debug/info/warn/error)
# Используйте debug только для отладки - может содержать чувствительные данные
LOG_LEVEL=info

# === ФУНКЦИОНАЛЬНЫЕ НАСТРОЙКИ ===
# Включить веб-поиск OpenAI (true/false)
ENABLE_WEB_SEARCH=true

# Режим использования инструментов (auto/none/required)
OPENAI_TOOL_CHOICE=auto

# Дополнительные настройки OpenAI для o3/o1 моделей
OPENAI_SERVICE_TIER=default
OPENAI_REASONING_EFFORT=medium

# === ВРЕМЕННЫЕ НАСТРОЙКИ ===
LUNCH_TIME=13:00
BRIEF_TIME=20:00

# === ФАЙЛОВЫЕ НАСТРОЙКИ ===
TASKS_FILE=tasks.yml
WHITELIST_FILE=whitelist.json

# === ВНЕШНИЕ API ===
BLOCKCHAIN_API=https://api.blockchain.info/stats

# === ДЕПЛОЙ НАСТРОЙКИ ===
DOCKERHUB_USER=your_dockerhub_username
