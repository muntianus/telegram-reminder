# Пример конфигурации для разработки
# Больше логирования и отладочных возможностей

# === ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ ===
# Используйте тестового бота для разработки
TELEGRAM_TOKEN=123456789:AABBCCDDEEFFaabbccddeeXXYYZZ1234567890

# Тестовый ключ OpenAI с ограниченными лимитами  
OPENAI_API_KEY=sk-1234567890abcdef1234567890abcdef1234567890abcdef

# === ОСНОВНЫЕ НАСТРОЙКИ ===
# Ваш личный Chat ID для тестирования
CHAT_ID=123456789

# Тот же чат для логов в разработке
LOG_CHAT_ID=123456789

# === ОТЛАДОЧНЫЕ НАСТРОЙКИ ===
# Максимальный уровень логирования для отладки
LOG_LEVEL=debug

# Быстрая и дешевая модель для разработки
OPENAI_MODEL=gpt-4o-mini

# Меньше токенов для экономии в разработке
OPENAI_MAX_TOKENS=300

# === ФУНКЦИОНАЛЬНЫЕ НАСТРОЙКИ ===
# Веб-поиск можно отключить для экономии API запросов
ENABLE_WEB_SEARCH=false

# Отключить инструменты для упрощения отладки
OPENAI_TOOL_CHOICE=none

# === ВРЕМЕННЫЕ НАСТРОЙКИ ===
# Удобное время для тестирования
LUNCH_TIME=12:00
BRIEF_TIME=18:00

# === ФАЙЛОВЫЕ НАСТРОЙКИ ===
# Локальные пути для разработки
TASKS_FILE=./tasks.yml
WHITELIST_FILE=./whitelist.json

# === ВНЕШНИЕ API ===
# Тот же API что и в проде
BLOCKCHAIN_API=https://api.blockchain.info/stats

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ДЛЯ РАЗРАБОТКИ ===
# Можно экспериментировать с reasoning effort
OPENAI_REASONING_EFFORT=low

# Можно использовать флекс тариф для экономии
OPENAI_SERVICE_TIER=flex

# === ЗАМЕТКИ ДЛЯ РАЗРАБОТКИ ===
# 1. Используйте отдельного тестового бота
# 2. Не используйте продакшен Chat ID
# 3. Мониторьте потребление API через OpenAI Dashboard
# 4. Регулярно очищайте whitelist.json от тестовых ID
# 5. Используйте .env.local для локальных переопределений (не комитьте!)